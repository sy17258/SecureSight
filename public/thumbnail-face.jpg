  <circle cx="320" cy="275" r="22" fill="#f3f4f6"/>
  <rect x="300" y="300" width="40" height="45" fill="#3b82f6" rx="3"/>
  
  <!-- Face detection overlay -->
  <rect x="290" y="245" width="60" height="80" fill="none" stroke="#3b82f6" stroke-width="3" rx="8" filter="url(#blueGlow)"/>
  
  <!-- Facial recognition points -->
  <circle cx="310" cy="270" r="2" fill="#3b82f6" filter="url(#blueGlow)"/>
  <circle cx="330" cy="270" r="2" fill="#3b82f6" filter="url(#blueGlow)"/>
