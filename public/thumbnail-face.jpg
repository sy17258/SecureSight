  <!-- Recognition grid lines -->
  <line x1="295" y1="260" x2="345" y2="260" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  <line x1="295" y1="275" x2="345" y2="275" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  <line x1="295" y1="290" x2="345" y2="290" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  <line x1="295" y1="305" x2="345" y2="305" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  
  <line x1="305" y1="250" x2="305" y2="320" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  <line x1="320" y1="250" x2="320" y2="320" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  <line x1="335" y1="250" x2="335" y2="320" stroke="#3b82f6" stroke-width="1" opacity="0.6"/>
  
  <!-- Identity match indicator -->
  <rect x="380" y="260" width="180" height="60" fill="rgba(59, 130, 246, 0.9)" rx="6" filter="url(#blueGlow)"/>
  <text x="470" y="280" fill="white" font-family="Arial" font-size="14" font-weight="bold" text-anchor="middle">
    IDENTITY CONFIRMED
  </text>
  <text x="470" y="300" fill="white" font-family="Arial" font-size="12" text-anchor="middle">
    John Smith - Employee
  </text>
  <text x="470" y="315" fill="white" font-family="Arial" font-size="10" text-anchor="middle">
    Confidence: 97.3%
  </text>
  
  <!-- Access granted indicator -->
  <circle cx="470" cy="200" r="25" fill="#10b981" opacity="0.8" filter="url(#blueGlow)"/>
  <polygon points="460,200 467,207 485,189" fill="white" stroke="white" stroke-width="2"/>
  
  <!-- Biometric scan lines -->
  <line x1="50" y1="120" x2="590" y2="120" stroke="#3b82f6" stroke-width="2" opacity="0.7">
    <animate attributeName="y1" values="120;300;120" dur="2s" repeatCount="indefinite"/>
    <animate attributeName="y2" values="120;300;120" dur="2s" repeatCount="indefinite"/>
  </line>
  
  <!-- Camera info -->
  <rect x="20" y="430" width="200" height="30" fill="rgba(0,0,0,0.8)" rx="4"/>
  <text x="30" y="450" fill="#f3f4f6" font-family="Arial" font-size="14" font-weight="bold">
    ENTRANCE - CAM 03
  </text>
  
  <!-- Recognition status -->
  <rect x="480" y="30" width="140" height="25" fill="#3b82f6" rx="4" filter="url(#blueGlow)"/>
