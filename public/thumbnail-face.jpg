<svg width="640" height="480" xmlns="http://www.w3.org/2000/svg">  <!-- Background gradient -->  <defs>    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />      <stop offset="100%" style="stop-color:#16213e;stop-opacity:1" />    </linearGradient>    <filter id="blueGlow">      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>      <feMerge>         <feMergeNode in="coloredBlur"/>        <feMergeNode in="SourceGraphic"/>      </feMerge>    </filter>  </defs>
  
  <rect width="640" height="480" fill="url(#bg)"/>
  
  <!-- Grid pattern -->
  <defs>
    <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
      <path d="M 40 0 L 0 0 0 40" fill="none" stroke="#2a3441" stroke-width="1" opacity="0.3"/>
    </pattern>
  </defs>
  <rect width="640" height="480" fill="url(#grid)"/>
  
